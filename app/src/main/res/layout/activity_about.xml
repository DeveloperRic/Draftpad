<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rictacius.draftpad.AboutActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textAllCaps="false"
        android:textColor="@color/colorTextSecondary"
        android:textSize="30sp" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp"
        android:background="@color/colorTextSecondary" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/app_author"
        android:textAllCaps="true"
        android:textColor="@color/colorTextSecondary"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:text="@string/about_defaultDesc"
        android:textAlignment="center"
        android:textColor="@color/colorTextSecondary" />

    <TextView
        android:id="@+id/about_txtAboutMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/view1"
        android:textAlignment="textStart"
        android:textColor="@color/colorTextSecondary" />

    <TextView
        android:id="@+id/about_visitWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view2"
        android:layout_alignStart="@+id/view2"
        android:text="@string/about_visitWebsite"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorTextSecondary"
        android:textStyle="bold" />

    <View
        android:id="@+id/view1"
        android:layout_width="94dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="10dp"
        android:background="@mipmap/victor_profile_image" />

    <View
        android:id="@+id/view2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/view1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:background="@drawable/twitter"
        android:onClick="twitterClick" />

    <View
        android:id="@+id/view3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/view2"
        android:layout_toStartOf="@+id/about_txtAboutMe"
        android:background="@drawable/github"
        android:onClick="gitHubClick" />

    <View
        android:id="@+id/view4"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/view2"
        android:layout_toEndOf="@+id/textView6"
        android:background="@drawable/email"
        android:onClick="emailClick" />

</RelativeLayout>
